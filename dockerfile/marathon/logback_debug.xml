<?xml version="1.0" encoding="UTF-8"?>

<configuration>
    <appender name="stdout" class="ch.qos.logback.core.ConsoleAppender">
        <encoder>
            <pattern>[%date] %level %message \(%logger:%thread\)%n</pattern>
        </encoder>
    </appender>

    <logger name="com.amazonaws.request" level="DEBUG" />
    <logger name="com.amazonaws.ecs.sample.ECSSchedulerDriver" level="DEBUG" />

    <root level="INFO">
        <appender-ref ref="stdout"/>
    </root>
</configuration>
